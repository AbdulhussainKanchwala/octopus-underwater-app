node {
  git diff --name-only $GIT_PREVIOUS_SUCCESSFUL_COMMIT $GIT_COMMIT | grep "ClientApp/" -q
if [ $? -ne 0 ]; then
   # if there is no change under the directory you care, exit now.
   echo "No change under the target directory. Skipping build.."
   exit 0
fi

# your existing build/test script...
  ws("workspace/${env.JOB_NAME}/${env.BRANCH_NAME}") {
        stage('Checkout') {
          
            checkout scm
            sh ""
        }
        stage('Copy passwd file'){
         
            sh "cp /var/jenkins_home/.npmrc /var/jenkins_home/workspace/'${env.JOB_NAME}'/${env.BRANCH_NAME}/ClientApp/"
        }
        stage('NPM Install') {
         
            dir('ClientApp') {
                sh 'npm install --verbose'
            }
        }
      /*  stage('Test') {
            steps {
                sh 'npm run test'
            }
        }*/
        stage('Build') {
          
            dir('ClientApp'){
                sh 'ng build --configuration=production'
                sh "cp /var/jenkins_home/web.config /var/jenkins_home/workspace/'${env.JOB_NAME}'/${env.BRANCH_NAME}/ClientApp/dist/EMS/"
            }
        }
        stage('Upload to S3 bucket') {
          
            sh  "pwd"
            sh "aws s3 rm s3://emsbillingwebsite --recursive"
            sh "aws s3 cp ClientApp/dist/EMS/ s3://emsbillingwebsite --recursive --include '*' "
      }
  }
}


