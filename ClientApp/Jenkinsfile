node {
  ws("workspace/${env.JOB_NAME}/${env.BRANCH_NAME}") {
        stage('Checkout') {
            checkout scm
        }
        stage('Copy passwd file'){
            sh "cp /var/jenkins_home/npmrc /var/jenkins_home/workspace/s3\ test/null/ClientApp/"
        }
        stage('NPM Install') {
            dir('ClientApp') {
                sh 'npm install --verbose'
            }
        }
      /*  stage('Test') {
            steps {
                sh 'npm run test'
            }
        }*/
        stage('Build') {
            dir('ClientApp'){
                sh 'ng build --configuration=production'
            }
        }
        stage('Upload to S3 bucket') {
            sh  "pwd"
            //sh "aws s3 ls s3://${S3_BUCKET_NAME}/${PATH_TO_FOLDER} --recursive --summarize | egrep "Total Objects: " | sed 's/[^0-9]*//g' "
            sh "aws s3 rm s3://emsmart20dev --recursive"
            sh "aws s3 cp ClientApp/dist/EMS/ s3://emsmart20dev --recursive --include '*' "
      }

  }
}
